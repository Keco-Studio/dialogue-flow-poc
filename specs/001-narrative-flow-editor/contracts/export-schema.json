{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Narrative Flow Project Export",
  "description": "Schema for the deterministic JSON export format. Version 1.",
  "type": "object",
  "required": ["schemaVersion", "id", "name", "createdAt", "updatedAt", "characters", "hierarchyRoot", "graphs"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1,
      "description": "Export format version. Current: 1."
    },
    "id": {
      "type": "string",
      "description": "Project ID (nanoid)"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "characters": {
      "type": "array",
      "items": { "$ref": "#/definitions/Character" },
      "description": "Sorted by id for determinism"
    },
    "hierarchyRoot": {
      "type": "array",
      "items": { "$ref": "#/definitions/TreeNode" }
    },
    "graphs": {
      "type": "array",
      "items": { "$ref": "#/definitions/Graph" },
      "description": "Sorted by id for determinism"
    }
  },
  "definitions": {
    "Character": {
      "type": "object",
      "required": ["id", "name"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 }
      }
    },
    "TreeNode": {
      "type": "object",
      "required": ["id", "type", "name", "children"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["folder", "chapter", "arc", "graphRef", "assetRef"]
        },
        "name": { "type": "string", "minLength": 1 },
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/TreeNode" }
        },
        "graphId": { "type": "string" }
      }
    },
    "Graph": {
      "type": "object",
      "required": ["id", "name", "nodes", "edges"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string", "minLength": 1 },
        "nodes": {
          "type": "array",
          "items": { "$ref": "#/definitions/Node" },
          "description": "Sorted by id for determinism"
        },
        "edges": {
          "type": "array",
          "items": { "$ref": "#/definitions/Edge" },
          "description": "Sorted by id for determinism"
        }
      }
    },
    "Position": {
      "type": "object",
      "required": ["x", "y"],
      "additionalProperties": false,
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "Pin": {
      "type": "object",
      "required": ["id", "nodeId", "direction"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "nodeId": { "type": "string" },
        "direction": { "type": "string", "enum": ["in", "out"] },
        "name": { "type": "string" },
        "conditionExpr": { "type": "string" },
        "instructionExpr": { "type": "string" }
      }
    },
    "Node": {
      "type": "object",
      "required": ["id", "type", "position", "inputPins", "outputPins", "data"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "type": {
          "type": "string",
          "enum": [
            "dialogueContainer", "flowFragment", "line", "choice",
            "condition", "instruction", "jump", "hub", "end", "annotation"
          ]
        },
        "position": { "$ref": "#/definitions/Position" },
        "inputPins": {
          "type": "array",
          "items": { "$ref": "#/definitions/Pin" }
        },
        "outputPins": {
          "type": "array",
          "items": { "$ref": "#/definitions/Pin" }
        },
        "data": {
          "type": "object",
          "description": "Type-specific payload. Structure depends on node type."
        }
      }
    },
    "Edge": {
      "type": "object",
      "required": ["id", "fromPinId", "toPinId"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string" },
        "fromPinId": { "type": "string" },
        "toPinId": { "type": "string" },
        "label": { "type": "string" },
        "color": { "type": "string" }
      }
    }
  }
}
